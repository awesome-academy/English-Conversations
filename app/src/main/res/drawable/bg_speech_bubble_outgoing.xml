<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Shadow Layer-->

    <item>
        <rotate
            android:fromDegrees="40"
            android:pivotX="100%"
            android:pivotY="0%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/dp_4" />
                <padding
                    android:bottom="@dimen/px_1"
                    android:left="@dimen/px_1"
                    android:right="@dimen/px_1" />
                <solid android:color="@color/tyrian_purple_light" />
            </shape>
        </rotate>
    </item>
    <item android:right="@dimen/dp_10">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_4" />
            <padding
                android:bottom="@dimen/px_1"
                android:left="@dimen/px_1"
                android:right="@dimen/px_1" />
            <solid android:color="@color/tyrian_purple_light" />
        </shape>
    </item>

    <!--===============-->

    <item>
        <rotate
            android:fromDegrees="40"
            android:pivotX="100%"
            android:pivotY="0%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/dp_4" />
                <padding android:bottom="@dimen/px_1" />
                <solid android:color="@color/tyrian_purple_dark" />
            </shape>
        </rotate>
    </item>
    <item android:right="@dimen/dp_10">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_4" />
            <padding android:bottom="@dimen/px_1" />
            <solid android:color="@color/tyrian_purple_dark" />
        </shape>
    </item>

    <!--===============-->

    <item>
        <rotate
            android:fromDegrees="40"
            android:pivotX="100%"
            android:pivotY="0%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/dp_4" />
                <padding
                    android:bottom="@dimen/px_1"
                    android:left="@dimen/px_1"
                    android:right="@dimen/px_1" />
                <solid android:color="@color/tyrian_purple_light" />
            </shape>
        </rotate>
    </item>
    <item android:right="@dimen/dp_10">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_4" />
            <padding
                android:bottom="@dimen/px_1"
                android:left="@dimen/px_1"
                android:right="@dimen/px_1" />
            <solid android:color="@color/tyrian_purple_light" />
        </shape>
    </item>

    <!--===============-->

    <!--ForeGround-->

    <item>
        <rotate
            android:fromDegrees="40"
            android:pivotX="100%"
            android:pivotY="0%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <solid android:color="@android:color/holo_blue_light" />
            </shape>
        </rotate>
    </item>
    <item android:right="@dimen/dp_10">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/holo_blue_light" />
            <corners android:radius="@dimen/dp_4" />
        </shape>
    </item>

</layer-list>
